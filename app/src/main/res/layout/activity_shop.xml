<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="13sp"
    android:paddingBottom="17dp"
    tools:context="com.example.administrator.lvf_10.Shop"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorAllBackGround">

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/shop_ZIUOLAN_back1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/shop_ZIUOLAN_back2"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_pic_ziluolan"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_marginTop="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_text_ziluolan"
                android:id="@+id/imageView5" />

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_text_9"
                android:id="@+id/imageView6" />

            <Button
                android:layout_marginTop="16dp"
                android:text="@string/button_buy"
                android:textColor="@color/button_text"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="40dp"
                android:background="@drawable/radius_button_2dp_xml"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button7" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_icon_navdot_selected"
            android:id="@+id/imageButton9"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_icon_navdot_unselected"
            android:id="@+id/imageButton"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
